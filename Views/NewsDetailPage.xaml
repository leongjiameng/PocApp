<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocApp.NewsDetailPage"
             Title="News Detail">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="16">

        <Label
            x:Name="TitleLabel"
            Grid.Row="0"
            FontSize="20"
            FontAttributes="Bold"
            LineBreakMode="WordWrap"/>

        <Label
            x:Name="DateLabel"
            Grid.Row="1"
            FontSize="12"
            TextColor="Gray"
            Margin="0,4,0,8"/>

        <WebView
            x:Name="ContentWebView"
            Grid.Row="2"/>
    </Grid>
</ContentPage>