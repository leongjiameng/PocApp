<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocApp.MainPage"
             Title="Home">

    <VerticalStackLayout
        Padding="24"
        Spacing="20"
        VerticalOptions="Center">

        <Label
            Text=".NET MAUI Demo"
            FontSize="24"
            HorizontalOptions="Center"/>

        <Label
            Text="Choose what to view:"
            FontSize="14"
            HorizontalOptions="Center"/>

        <Button
            Text="News"
            Clicked="OnNewsClicked"
            HorizontalOptions="Center"
            WidthRequest="160"/>

        <Button
            Text="Movies"
            Clicked="OnMoviesClicked"
            HorizontalOptions="Center"
            WidthRequest="160"/>
    </VerticalStackLayout>
</ContentPage>