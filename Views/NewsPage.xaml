<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocApp.NewsPage"
             Title="News">

    <Grid Padding="16"
            RowDefinitions="Auto,*,Auto">

        <Label
            x:Name="StatusLabel"
            Grid.Row="0"
            Text=""
            HorizontalOptions="Center"
            Margin="0,0,0,8"/>

        <CollectionView
            x:Name="NewsCollectionView"
            Grid.Row="1"
            SelectionMode="Single"
            SelectionChanged="OnNewsSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,4"
                           Padding="10"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="16"/>

                            <Label Text="{Binding PublicationDate, StringFormat='Published: {0:yyyy-MM-dd}'}"
                                   FontSize="12"/>

                            <Label Text="{Binding Summary}"
                                   FontSize="13"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator
            x:Name="LoadingIndicator"
            Grid.Row="2"
            IsVisible="False"
            IsRunning="False"
            HorizontalOptions="Center"
            Margin="0,8,0,0"/>
    </Grid>
</ContentPage>